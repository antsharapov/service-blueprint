<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aero.basel.aaq.serviceblueprint.SimpleTestActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:showDividers="beginning|middle|end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/triple_counter_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/triple_test_tv"
        android:padding="25dp"
        android:layout_below="@+id/triple_counter_textview"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/triple_marks_listView"
        android:layout_gravity="center"
        android:dividerHeight="8dp"
        android:textAlignment="center"
        android:layout_below="@+id/triple_test_tv"
        android:layout_above="@+id/timer" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/triple_counter_textview" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timer"
        android:id="@+id/timer_switch"
        android:paddingLeft="50dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/timer"
        android:paddingRight="50dp" />

</RelativeLayout>
